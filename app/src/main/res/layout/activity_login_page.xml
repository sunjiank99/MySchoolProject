<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:id="@+id/btn_page">




        <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/login_btn_login"
            android:layout_weight="1"

            android:background="@drawable/login_btn_top"
            android:textColor="#ffffff"/>

        <Button
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/login_btn_register"
            android:layout_weight="1"

            android:background="@drawable/login_btn_top"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_page_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/btn_page"
        android:layout_weight="9"
        android:background="#f2f2f2"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/login_page_edt_email"

            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_textview_register"
            android:hint="邮箱"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/login_page_edt_id"

            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_page_edt_email"
            android:layout_alignStart="@+id/login_page_edt_email"
            android:layout_below="@+id/login_page_edt_email"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_textview_register"
            android:hint="注册账号"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/login_page_edt_ps"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_page_edt_id"
            android:layout_alignStart="@+id/login_page_edt_id"
            android:layout_below="@+id/login_page_edt_id"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_textview_register"
            android:hint="密码"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/login_page_edt_confirm_ps"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_page_edt_ps"
            android:layout_alignRight="@+id/login_page_edt_ps"
            android:layout_below="@+id/login_page_edt_ps"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_textview_register"
            android:hint="确认密码"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/login_page_edt_nick"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_page_edt_confirm_ps"
            android:layout_alignRight="@+id/login_page_edt_confirm_ps"
            android:layout_below="@+id/login_page_edt_confirm_ps"
            android:layout_marginTop="21dp"
            android:background="@drawable/login_textview_register"
            android:hint="昵称"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_page_edt_nick"
            android:layout_below="@+id/login_page_edt_nick"
            android:layout_marginTop="20dp"
            android:text="是否接受消息" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/login_page_edt_nick"
            android:layout_below="@+id/login_page_edt_nick"
            android:layout_marginTop="2dp"
            android:textOff="否"
            android:textOn="是"
            android:thumb="@drawable/login_btn_accept_msg" />

        <Button
            android:id="@+id/login_page_btn_singup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/switch1"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_btn_bottom"
            android:elevation="2dp"
            android:text="创建账号"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_page_btn_singup"
            android:layout_below="@+id/login_page_btn_singup"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="13dp"
            android:text="已经有账号了?"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_page_btn_singup"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="登录"


            android:textColor="#fe5722" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/btn_page"


        android:id="@+id/login_page_login"
        android:background="#f1f5f8"
        android:visibility="visible">




        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/login_backone"
            android:elevation="2dp"

            android:layout_marginTop="100dp"

            android:layout_centerHorizontal="true">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/login_backtwo"
            android:elevation="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"></RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:elevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_backthree"
             >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/welcome_logo"
                android:id="@+id/imageView2"
                android:layout_marginTop="48dp"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="密码"
                android:ems="10"
                android:id="@+id/login_ps_editText"
                android:background="@drawable/login_textview"
                android:layout_below="@+id/login_id_editText"
                android:layout_alignLeft="@+id/login_id_editText"
                android:layout_alignStart="@+id/login_id_editText"
                android:layout_marginTop="20dp"
                android:paddingLeft="12dp"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="账号"
                android:ems="10"
                android:id="@+id/login_id_editText"
                android:background="@drawable/login_textview"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:paddingLeft="12dp"/>

        </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_marginTop="280dp">

       <TextView
            android:text="忘记密码？"
            android:textColor="#fe5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:id="@+id/textView"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="20dp"></TextView>


       <Button

           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="其他方式登录"
           android:id="@+id/button8"
           android:background="@drawable/login_btn_bottom"
           android:textColor="#ffffff"
           android:layout_marginBottom="44dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:elevation="2dp"/>

       <Button

       android:layout_width="300dp"
       android:layout_height="wrap_content"


           android:background="@drawable/login_btn_bottom"
           android:text="登录"
           android:textColor="#ffffff"
           android:id="@+id/login_btn_login_real"
           android:layout_marginBottom="17dp"
           android:layout_above="@+id/button8"
           android:layout_alignLeft="@+id/button8"
           android:layout_alignStart="@+id/button8"
           android:elevation="2dp"/>
   </RelativeLayout>


    </RelativeLayout>


</LinearLayout>